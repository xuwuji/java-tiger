<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="topup500" class="com.xuwuji.eshop.model.Topup">
		<property name="amount" value="500"></property>
		<property name="getAmount" value="520"></property>
	</bean>

	<bean id="topup1000" class="com.xuwuji.eshop.model.Topup">
		<property name="amount" value="1000"></property>
		<property name="getAmount" value="1050"></property>
	</bean>

	<bean id="topup1500" class="com.xuwuji.eshop.model.Topup">
		<property name="amount" value="1500"></property>
		<property name="getAmount" value="1550"></property>
	</bean>

	<bean id="topup2000" class="com.xuwuji.eshop.model.Topup">
		<property name="amount" value="2000"></property>
		<property name="getAmount" value="2100"></property>
	</bean>

	<bean id="topup3000" class="com.xuwuji.eshop.model.Topup">
		<property name="amount" value="3000"></property>
		<property name="getAmount" value="3150"></property>
	</bean>

	<bean id="topup5000" class="com.xuwuji.eshop.model.Topup">
		<property name="amount" value="5000"></property>
		<property name="getAmount" value="5300"></property>
	</bean>

	<bean id="topupList" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="topup500" />
				<ref bean="topup1000" />
				<ref bean="topup1500" />
				<ref bean="topup2000" />
				<ref bean="topup3000" />
				<ref bean="topup5000" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="topupInfo" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="topup500" />
				<ref bean="topup1000" />
				<ref bean="topup1500" />
				<ref bean="topup2000" />
				<ref bean="topup3000" />
				<ref bean="topup5000" />
			</list>
		</constructor-arg>
	</bean>


	<bean id="topupConfig" class="com.xuwuji.eshop.model.TopUpConfig">
		<property name="topupList">
			<list>
				<ref bean="topup500" />
				<ref bean="topup1000" />
				<ref bean="topup1500" />
				<ref bean="topup2000" />
				<ref bean="topup3000" />
				<ref bean="topup5000" />
			</list>
		</property>
		<property name="info">
			<list>
				<value>1、充值金额不退不换；</value>
				<value>2、付款时从余额中优先划扣；</value>
				<value>3、首次充值1500元额外赠送安耐晒防晒乳液25ml一瓶；</value>
				<value>4、首次充值2000元额外赠送MAC口红一支（可自选色号）/安耐晒防晒喷雾60ml一瓶（二选一）；</value>
				<value>5、首次充值3000元额外赠送YSL口红一支（可自选色号）/安耐晒防晒乳液60ml一瓶（二选一）；</value>
				<value>6、首次充值5000元额外赠送TF口红一支（可自选色号）；</value>
			</list>
		</property>
	</bean>

	<bean id="brandRecommendList" class="java.lang.String">
		<constructor-arg index="0" value="7,11,13,26,54,9" />
	</bean>


</beans>

