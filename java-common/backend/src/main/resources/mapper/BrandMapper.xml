<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xuwuji.eshop.db.mapper.BrandMapper">


	<resultMap type="Brand" id="brandResult">
		<id property="id" column="id"></id>
		<result property="brandCN" column="type"></result>
		<result property="state" column="type"></result>
		<result property="brandEN" column="type"></result>
		<result property="country" column="type"></result>
		<result property="brandLevel" column="type"></result>
		<result property="state" column="type"></result>
		<result property="imgUrl" column="type"></result>

	</resultMap>

	<insert id="add" parameterType="hashmap" useGeneratedKeys="true"
		keyProperty="id">
		insert into brand
		(brandCN,brandEN,brandLevel,country,state,imgUrl)
		values(#{brandCN},#{brandEN},#{brandLevel},#{country},'0',#{imgUrl})
	</insert>

	<update id="update" parameterType="hashmap">
		update brand set
		brandCN=#{brandCN},brandEN=#{brandEN},brandLevel=#{brandLevel},country=#{country},imgUrl=#{imgUrl}
		where id=#{id};
	</update>

	<update id="disable" parameterType="hashmap">
		update brand set
		state='0'
		where id=#{id};
	</update>

	<update id="reActive" parameterType="hashmap">
		update brand set
		state='1'
		where id=#{id};
	</update>

	<select id="getAll" resultType="brand">
		select * from
		brand;
	</select>

	<select id="getById" resultType="brand">
		select * from
		brand where
		id=#{id};
	</select>

	<select id="getByIds" resultType="brand">
		select * from
		brand where
		id in
		<foreach item="item" index="index" collection="ids" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</select>

	<select id="getActiveAll" resultType="brand">
		select * from
		brand where
		state='1';
	</select>

	<select id="getActiveAllByBrandId" resultType="brand"
		parameterType="hashmap">
		select * from
		brand where
		id=#{id} and
		state='1';
	</select>

	<select id="getActiveCountry" resultType="hashmap"
		parameterType="java.lang.String">
		select DISTINCT(country) from brand where state='1';
	</select>

	<select id="getActiveAllByCountry" resultType="brand"
		parameterType="hashmap">
		select * from
		brand where
		country=#{country} and
		state='1';
	</select>

</mapper>