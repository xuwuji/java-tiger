<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xuwuji.eshop.db.mapper.ArticleMapper">


	<resultMap type="Article" id="ArticleResult">
		<id property="id" column="id"></id>
		<result property="title" column="type"></result>
		<result property="state" column="type"></result>
		<result property="text" column="type"></result>
		<result property="time" column="DATE" javaType="java.util.Date"
			jdbcType="DATE"></result>
		<result property="imgs" column="type"></result>
		<result property="tags" column="type"></result>
		<result property="typeId" column="type"></result>
		<result property="announceStyle" column="type"></result>


	</resultMap>

	<insert id="add" parameterType="hashmap" useGeneratedKeys="true"
		keyProperty="id">
		insert into article
		(title,text,time,imgs,tags,state,typeId,announceStyle)
		values(#{title},#{text},now(),#{imgs},#{tags},'0'ï¼Œ#{typeId},#{announceStyle})
	</insert>

	<update id="update" parameterType="hashmap">
		update article set
		title=#{title},text=#{text},imgs=#{imgs},tags=#{tags} ,typeId=#{typeId},announceStyle=#{announceStyle} where id=#{id}
	</update>

	<select id="getById" resultType="Article">
		select * from
		article where
		id=#{id};
	</select>

	<select id="getActiveAll" resultType="Article">
		select * from
		article where
		state='1';
	</select>

	<select id="getActiveAllByTags" resultType="Article">
		select * from
		article
		where
		state='1' and tags like CONCAT('%',#{tag},'%');
	</select>
	
	<select id="getActiveAllByCondition" resultType="Article">
		select * from
		article
		where
		state='1' 
		<if test="tag != null and tag !=''">
			and tags like CONCAT('%',#{tag},'%') 
		</if>
		<if test="typeId != null and typeId !=''">
		    and typeId=#{typeId};
		</if>
		<if test="title != null and title !=''">
		    and title like CONCAT('%',#{title},'%') ;
		</if>
	</select>

	<select id="getAll" resultType="Article">
		select * from
		article;
	</select>

	<update id="disable" parameterType="hashmap">
		update article set
		state='0'
		where id=#{id};
	</update>

	<update id="reActive" parameterType="hashmap">
		update article set
		state='1'
		where id=#{id};
	</update>

</mapper>